    "eslint": "^7.2.0",
    "fakerator": "^0.3.1",
    "jest": "^26.0.1",
    "jest-cli": "^26.0.1",
    "lolex": "^6.0.0",
    "moleculer": "^0.14.7",
    "mongoose": "^5.10.7",
    "nodemon": "^2.0.4",
